<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maintenance">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/OilTextDate"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:hint="Oil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.295" />

    <TextView
        android:id="@+id/MakeModel"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"

        android:hint="Make/Model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/transmission"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:hint="Transmission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OilTextDate" />

    <TextView
        android:id="@+id/AirFilter"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:hint="Air Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transmission" />

    <ImageView
        android:id="@+id/Profile"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:clickable="true"
        android:src="@mipmap/siloette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AirFilter" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:clickable="true"
        android:src="@mipmap/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AirFilter" />


</android.support.constraint.ConstraintLayout>